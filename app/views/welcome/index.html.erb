<h1>LaunchPad Lab Theater</h1>

<h2>Now Playing</h2>

<% today = Date.today %>
<% @days.each do |day| %>
	<div class="showing_day">
		<h2><%= today==Date.today ? "Today" : today.strftime('%B %-d, %Y') %></h2>
		<% if day.empty? %>
			There are no showtimes for this day.
		<% else %>
			<% day.each do |movie, showtimes| %>
				<p>
				<%= movie %>: 
				<% showtimes.each do |showtime| %>
					<% if showtime[1] > 0 %>
						<%= link_to showtime[0], new_order_path(:showtime =>Showtime.where(movie: Movie.where(title: movie), time: showtime[0])[0].id) %>  
					<% else %>
						<%= showtime[0] %>
					<% end %> 
				<% end %>
				</p>
			<% end %>
		<% end %>
	</div>
	<% today += 1 %>
<% end %> 